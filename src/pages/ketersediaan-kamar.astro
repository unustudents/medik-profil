---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ContactInfo from "@/components/ContactInfo.astro";
import { rooms } from "@/data/rooms";
---

<Layout title="Ketersediaan Kamar">
    <Header />
    <main class="min-h-screen">
        <div class="max-w-6xl mx-auto px-4 py-12">
            <div
                class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 space-y-4 md:space-y-0"
            >
                <div>
                    <h1
                        class="text-3xl font-bold text-black dark:text-white tracking-tight"
                    >
                        Ketersediaan Kamar
                    </h1>
                    <p class="text-slate-600 dark:text-slate-400 mt-1 text-lg">
                        RSU Afdila Premium Services
                    </p>
                </div>
                <div
                    class="flex items-center space-x-4 bg-gray-50 dark:bg-gray-800 p-2 rounded-full px-4 shadow-sm"
                >
                    <div class="flex items-center space-x-2">
                        <span
                            class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wider"
                            >Terisi</span
                        >
                        <div
                            class="w-20 h-8 flex items-center justify-center bg-[#545454] text-white rounded-full text-xs font-bold uppercase"
                        >
                            Terisi
                        </div>
                    </div>
                    <div class="h-4 w-px bg-gray-300 dark:bg-gray-600"></div>
                    <div class="flex items-center space-x-2">
                        <span
                            class="text-xs font-semibold text-gray-600 dark:text-gray-300 uppercase tracking-wider"
                            >Kosong</span
                        >
                        <div
                            class="w-20 h-8 flex items-center justify-center bg-primary text-white rounded-full text-xs font-bold uppercase shadow-sm"
                        >
                            Kosong
                        </div>
                    </div>
                </div>
            </div>
            <div class="space-y-8">
                {
                    rooms.map((room) => (
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-center border-b border-gray-100 dark:border-gray-800 pb-6">
                            <div class="md:col-span-4">
                                <h2
                                    class:list={[
                                        "text-xl font-bold text-primary",
                                        {
                                            "uppercase text-sm tracking-wide":
                                                room.name ===
                                                "Neonatus Incubator",
                                        },
                                    ]}
                                >
                                    {room.name}
                                </h2>
                                <p class="text-sm italic text-gray-500 dark:text-gray-400 mt-0.5">
                                    {room.description}
                                </p>
                            </div>
                            <div class="md:col-span-8 flex flex-wrap gap-2">
                                {room.beds.map((bed) => (
                                    <div
                                        class:list={[
                                            "w-10 h-10 flex items-center justify-center text-white font-medium rounded",
                                            bed.isOccupied
                                                ? "bg-[#545454]"
                                                : "bg-primary",
                                        ]}
                                    >
                                        {bed.number}
                                    </div>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </main>
    <ContactInfo />
    <Footer />
</Layout>
