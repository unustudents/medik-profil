---
export const prerender = true;

import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ContactInfo from "@/components/ContactInfo.astro";
import { Image } from "astro:assets";
import { agendaEvents } from "@/data/agenda";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
    return agendaEvents.map((event) => ({
        params: { slug: event.slug },
        props: { event },
    }));
}) satisfies GetStaticPaths;

const { event } = Astro.props;

const getStatusConfig = (status: string) => {
    switch (status) {
        case "Akan Datang":
            return {
                icon: "event",
                color: "text-emerald-600 dark:text-emerald-400",
                bg: "bg-emerald-50 dark:bg-emerald-900/20",
            };
        case "Sedang Berlangsung":
            return {
                icon: "play_circle",
                color: "text-blue-600 dark:text-blue-400",
                bg: "bg-blue-50 dark:bg-blue-900/20",
            };
        default: // Acara telah lewat
            return {
                icon: "event_busy",
                color: "text-red-600 dark:text-red-400",
                bg: "bg-red-50 dark:bg-red-900/20",
            };
    }
};

const statusConfig = getStatusConfig(event.status);
---

<Layout title={`${event.title} - Agenda RSU Afdila`}>
    <Header />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <section
            class="bg-white dark:bg-slate-900 rounded-xl overflow-hidden shadow-sm border border-slate-100 dark:border-slate-800 mb-10"
        >
            <div class="flex flex-col lg:flex-row">
                <div class="lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center">
                    <div
                        class={`inline-flex items-center gap-2 ${statusConfig.bg} ${statusConfig.color} px-3 py-1.5 rounded-full text-xs font-semibold mb-6 w-max`}
                    >
                        <span class="material-icons-outlined text-sm"
                            >{statusConfig.icon}</span
                        >
                        {event.status}
                    </div>
                    <div
                        class="flex items-center gap-2 text-slate-500 dark:text-slate-400 mb-4"
                    >
                        <span class="material-icons-outlined text-lg"
                            >calendar_today</span
                        >
                        <span class="text-sm font-medium"
                            >{event.date} - {event.time}</span
                        >
                    </div>
                    <h1
                        class="text-3xl lg:text-4xl font-extrabold text-slate-900 dark:text-white mb-6 leading-tight"
                    >
                        {event.title}
                    </h1>
                    <div class="flex flex-col gap-2">
                        <span
                            class="text-xs uppercase tracking-wider text-slate-400 font-bold"
                            >Informasi</span
                        >
                        <div class="flex">
                            <button
                                class="bg-primary hover:bg-opacity-90 text-white px-5 py-2.5 rounded-full text-sm font-semibold flex items-center gap-2 transition-all shadow-sm shadow-primary/30"
                            >
                                <span class="material-icons-outlined text-sm"
                                    >phone</span
                                >
                                Hubungi Panitia
                            </button>
                        </div>
                    </div>
                </div>
                <div class="lg:w-1/2 relative h-64 lg:h-auto overflow-hidden">
                    <Image
                        alt={event.title}
                        class="absolute inset-0 w-full h-full object-cover"
                        src={event.image}
                        width={800}
                        height={600}
                    />
                </div>
            </div>
        </section>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
            <div class="lg:col-span-8">
                <div
                    class="bg-white dark:bg-slate-900 p-8 lg:p-10 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800"
                >
                    <div
                        class="flex items-center gap-2 text-slate-500 dark:text-slate-400 mb-8 pb-6 border-b border-slate-100 dark:border-slate-800"
                    >
                        <span class="material-icons-outlined text-primary"
                            >location_on</span
                        >
                        <span class="text-sm"
                            >Jl. Raya Lintas Liwa No. 39, Simpang Sari, Sumber
                            Jaya, Lampung Barat</span
                        >
                    </div>

                    <article
                        class="prose prose-slate dark:prose-invert max-w-none"
                        set:html={event.content}
                    />

                    <div
                        class="flex flex-wrap items-center gap-3 mt-10 border-t border-slate-100 dark:border-slate-800 pt-8"
                    >
                        <button
                            class="bg-[#3B5998] hover:bg-opacity-90 text-white px-4 py-2 rounded flex items-center gap-2 text-sm font-medium transition-colors"
                        >
                            <svg
                                class="w-4 h-4 fill-current"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                                ></path>
                            </svg>
                            Bagikan ke Facebook
                        </button>
                        <button
                            class="bg-black hover:bg-slate-800 text-white p-2.5 rounded transition-colors"
                            aria-label="Bagikan ke X (Twitter)"
                        >
                            <svg
                                class="w-4 h-4 fill-current"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="bg-[#25D366] hover:bg-opacity-90 text-white p-2.5 rounded transition-colors"
                            aria-label="Bagikan ke WhatsApp"
                        >
                            <svg
                                class="w-4 h-4 fill-current"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="bg-[#0088CC] hover:bg-opacity-90 text-white p-2.5 rounded transition-colors"
                            aria-label="Bagikan ke Telegram"
                        >
                            <svg
                                class="w-4 h-4 fill-current"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 24c6.627 0 12-5.373 12-12S18.627 0 12 0 0 5.373 0 12s5.373 12 12 12zM5.914 12.333c1.944-.847 4.264-1.782 6.958-2.806 2.694-1.024 4.542-1.71 5.543-2.059.901-.314 1.585-.367 2.051-.159.466.208.682.605.648 1.192l-.025.438c-.146 1.842-.511 4.591-.735 6.784l-.164 1.607c-.067.658-.328 1.012-.782 1.062-.454.05-.989-.138-1.604-.564-1.125-.779-1.996-1.393-2.613-1.842-.617-.449-1.189-.865-1.714-1.248-.525-.383-.73-.623-.615-.719.115-.096.345-.333.689-.711.344-.378.847-.932 1.509-1.662.662-.73 1.121-1.258 1.378-1.584.257-.326.435-.558.534-.696.099-.138.164-.263.195-.374.031-.111-.013-.231-.131-.359-.118-.128-.31-.134-.576-.017-.266.117-.999.414-2.199.891l-3.322 1.343c-1.114.453-2.003.799-2.667 1.038-.664.239-1.144.43-1.44.573-.296.143-.54.214-.731.214-.191 0-.34-.048-.446-.144-.106-.096-.183-.24-.23-.432l-.214-.816c-.047-.192-.093-.45-.138-.774s-.045-.583 0-.776c.045-.193.125-.336.241-.429.116-.093.284-.139.504-.139.22 0 .44.047.658.14z"
                                ></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            <aside class="lg:col-span-4 space-y-8">
                <div
                    class="bg-white dark:bg-slate-900 rounded-xl overflow-hidden shadow-sm border border-slate-100 dark:border-slate-800 border-t-4 border-t-primary"
                >
                    <div class="p-6">
                        <h3
                            class="text-lg font-bold text-slate-900 dark:text-white mb-4"
                        >
                            Kategori
                        </h3>
                        <ul class="space-y-0 text-sm">
                            <li
                                class="border-b border-dashed border-slate-200 dark:border-slate-700 py-3"
                            >
                                <a
                                    class="text-slate-600 dark:text-slate-400 hover:text-primary transition-colors flex justify-between"
                                    href="/agenda/kategori/selesai"
                                >
                                    <span>Acara Selesai</span>
                                    <span class="text-slate-300">→</span>
                                </a>
                            </li>
                            <li
                                class="border-b border-dashed border-slate-200 dark:border-slate-700 py-3"
                            >
                                <a
                                    class="text-slate-600 dark:text-slate-400 hover:text-primary transition-colors flex justify-between"
                                    href="/agenda/kategori/sedang-berlangsung"
                                >
                                    <span>Acara Berlangsung</span>
                                    <span class="text-slate-300">→</span>
                                </a>
                            </li>
                            <li
                                class="border-b border-dashed border-slate-200 dark:border-slate-700 py-3"
                            >
                                <a
                                    class="text-slate-600 dark:text-slate-400 hover:text-primary transition-colors flex justify-between"
                                    href="/agenda/kategori/akan-datang"
                                >
                                    <span>Acara Akan Datang</span>
                                    <span class="text-slate-300">→</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
    </main>

    <ContactInfo />
    <Footer />
</Layout>

<style>
    /* Custom prose overrides if needed */
    .prose p {
        margin-bottom: 1.5em;
    }
</style>
