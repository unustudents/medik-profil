---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import ContactInfo from "@/components/ContactInfo.astro";
import { roomRates } from "@/data/room-rates";

const formatPrice = (price: number) => {
    return new Intl.NumberFormat("id-ID", {
        style: "currency",
        currency: "IDR",
    }).format(price);
};
---

<Layout title="RSU Afdila - Premium Room Pricing">
    <Header />
    <main
        class="min-h-screen bg-slate-50 dark:bg-slate-900 text-slate-900 dark:text-slate-100 p-6 md:p-12 transition-colors duration-200"
    >
        <div class="max-w-7xl mx-auto">
            <header class="mb-10 text-center lg:text-left">
                <h1
                    class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl"
                >
                    Layanan Kamar Rawat Inap
                </h1>
                <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
                    Pilih kenyamanan terbaik untuk pemulihan kesehatan Anda di
                    RSU Afdila.
                </p>
            </header>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    roomRates.map((room) => (
                        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-md overflow-hidden flex flex-col hover:shadow-lg transition-shadow">
                            <div class="h-48 overflow-hidden">
                                <img
                                    alt={room.name}
                                    class="w-full h-full object-cover"
                                    src={room.image}
                                />
                            </div>
                            <div class="p-5 flex-grow">
                                <div class="flex gap-2 mb-3">
                                    <span class="px-2 py-0.5 border border-primary text-primary text-[10px] font-bold tracking-wider rounded uppercase">
                                        {room.type}
                                    </span>
                                    <span class="px-2 py-0.5 border border-primary text-primary text-[10px] font-bold tracking-wider rounded uppercase">
                                        Kap : {room.capacity}
                                    </span>
                                </div>
                                <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-1">
                                    {room.name}
                                </h3>
                                <p class="text-xl font-bold text-slate-700 dark:text-slate-300">
                                    {formatPrice(room.price)}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </main>
    <ContactInfo />
    <Footer />
</Layout>
